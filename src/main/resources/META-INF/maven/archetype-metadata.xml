<archetype name="${artifactId}">
  <id>spring-boot-service</id>
  <modules>
    <module id="api" dir="api" name="api">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
        </fileSet>
      </fileSets>
    </module>
    <module id="domain" dir="domain" name="domain">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/test/resources</directory>
        </fileSet>
      </fileSets>
    </module>
    <module id="service" dir="service" name="service">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
        </fileSet>
      </fileSets>
    </module>
    <module id="application" dir="application"
            name="application">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.yaml</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/test/resources</directory>
        </fileSet>
      </fileSets>
    </module>
    <module id="controller" dir="controller" name="controller">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
        </fileSet>
      </fileSets>
    </module>
    <module id="client" dir="client" name="client">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype>
